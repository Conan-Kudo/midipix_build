#
# set -o errexit -o noglob are assumed.
#

pkg_install_subdirs() {
	pkg_install_files "${PWD}/.."		\
		/=destdir			\
		/=destdir/bin			\
		/=destdir/lib			\
		/=destdir/sbin			\
		/=destdir/share/man/man1	\
		/=destdir/share/man		\
		@.=destdir/usr			\
		@share/man=destdir/man;
};

