#
# set -o errexit -o noglob are assumed.
#

pkg_install_subdirs() {
	pkg_install_files "${PKG_DESTDIR}"	\
		/=bin				\
		/=lib				\
		/=sbin				\
		/=share/doc			\
		/=share/info			\
		/=share/man/man1		\
		@.=usr				\
		@lib=lib64			\
		@share/doc=doc			\
		@share/info=info		\
		@share/man=man;
};

