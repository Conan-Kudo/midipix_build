#
# . ./build.vars and set -o errexit are assumed.
#

pkg_vim_configure_pre() {
	export vim_cv_bcopy_handles_overlap=true;
	export vim_cv_getcwd_broken=false;
	export vim_cv_memcpy_handles_overlap=false;
	export vim_cv_memmove_handles_overlap=true;
	export vim_cv_stat_ignores_slash=false;
	export vim_cv_terminfo=true;
	export vim_cv_toupper_broken=false;
	export vim_cv_tty_group=tty;
	export vim_cv_tty_mode=0666;
};

