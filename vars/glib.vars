#
# set -o errexit -o noglob are assumed.
#

pkg_glib_install_pkgconfig_post() {
	local _pc_path;
	for _pc_path in $(find "${PKG_DESTDIR}"/lib/pkgconfig -name \*.pc); do
		sed -i"" -e '/^Libs:\s/s/-L\${libdir}/& -lffi -lpcre -lz/'	\
			"${_pc_path}";
	done;
};

pkg_glib_host_install_pkgconfig_post() {
	pkg_glib_install_pkgconfig_post;
};

