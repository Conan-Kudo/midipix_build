: ${PREFIX:=${HOME}/midipix};
: ${PREFIX_NATIVE:=${PREFIX}/native};
: ${TARGET:=x86_64-nt64-midipix};
: ${PREFIX_TARGET:=${PREFIX}/${TARGET}};
: ${WORKDIR:=${PREFIX}/tmp};
MAKEFLAGS="-j8${MAKEFLAGS:+ ${MAKEFLAGS}}";
export PATH="${PREFIX}/bin${PATH:+:${PATH}}";
TIMESTAMP_FMT="%Y/%m/%d %H:%M:%S";

